        <button class="tool-btn" onclick="cutClip()">Cortar</button>
        <button class="tool-btn" onclick="addText()">Texto</button>
        <button class="tool-btn" onclick="applyFilter()">Filtro</button>
        <button class="tool-btn" onclick="addMusic()">Música</button>
