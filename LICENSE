<!-- FFmpeg -->
<script src="https://cdn.jsdelivr.net/npm/@ffmpeg/ffmpeg@0.12.6/dist/ffmpeg.min.js"></script>

<!-- JS -->
<script>
    let importedFile = null;
    const importInput = document.getElementById("import");
    const player = document.getElementById("player");
    const tracks = document.getElementById("tracks");

    importInput.onchange = () => {
        importedFile = importInput.files[0];
        player.src = URL.createObjectURL(importedFile);

        // Add to timeline
        const clip = document.createElement("div");
        clip.className = "clip";
        clip.innerText = "Vídeo";
        tracks.appendChild(clip);
    };

    function cutClip() {
        alert("Função de corte será aplicada com FFmpeg na exportação.");
    }

    function addText() {
        alert("Aqui você poderá adicionar texto sobre o vídeo.");
    }

    function applyFilter() {
        alert("Filtros serão aplicados via FFmpeg.");
    }

    function addMusic() {
        alert("Suporte para trilha sonora será adicionado.");
    }

    async function exportVideo() {
        alert("Exportação em construção (FFmpeg.wasm).");
    }
</script>

